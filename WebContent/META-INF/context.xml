              name="jdbc/put_here_the_name"
              type="oracle.jdbc.pool.OracleConnectionPoolDataSource"
              factory="oracle.jdbc.pool.OracleDataSourceFactory"
              url="jdbc:oracle:thin:/@PUT_HERE_THE_NAME"/>
</Context>
